<AnchorPane onMouseEntered="#lowerall" onMouseExited="#raiseall" prefWidth="500.0" stylesheets="@login_Stylesheet.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="canopy.app.view.roomsSideBarController">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <AnchorPane styleClass="card-mid" VBox.vgrow="ALWAYS">
               <children>
                  <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" styleClass="label-smallheader" text="R O O M" textAlignment="CENTER" wrapText="true" VBox.vgrow="ALWAYS" />
                        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="33.0" layoutY="10.0" styleClass="label-smallheader" text="D E T A I L S" textAlignment="CENTER" wrapText="true" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
            <ScrollPane fx:id="scrollpane" hbarPolicy="NEVER" styleClass="background-white">
               <content>
                  <AnchorPane fx:id="parent" prefWidth="500.0" styleClass="card-white">
                     <children>
                        <VBox layoutX="20.0" layoutY="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <GridPane maxWidth="260.0" prefWidth="260.0" vgap="5.0">
                                 <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="237.0" minWidth="10.0" prefWidth="10.0" />
                                    <ColumnConstraints hgrow="ALWAYS" />
                                 </columnConstraints>
                                 <rowConstraints>
                                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                    <RowConstraints vgrow="SOMETIMES" />
                                 </rowConstraints>
                                 <children>
                                    <Label styleClass="label-grey" text="R O O M   N A M E" GridPane.halignment="RIGHT" GridPane.hgrow="ALWAYS" />
                                    <Label styleClass="label-grey" text="B U I L D I N G" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                                    <Label styleClass="label-grey" text="A D D R E S S " GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                                    <Label fx:id="roomname" maxWidth="100.0" styleClass="label-dark" wrapText="true" GridPane.columnIndex="2" />
                                    <Label fx:id="buildingname" maxWidth="100.0" styleClass="label-dark" wrapText="true" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                    <VBox alignment="CENTER_LEFT" minHeight="100.0" GridPane.columnIndex="2" GridPane.rowIndex="2">
                                       <children>
                                          <Label fx:id="addresslabel" maxWidth="100.0" styleClass="label-dark" wrapText="true" />
                                          <Label fx:id="citylabel" maxWidth="100.0" styleClass="label-dark" wrapText="true" />
                                          <Label fx:id="postalcodelabel" maxWidth="100.0" styleClass="label-dark" wrapText="true" />
                                       </children>
                                    </VBox>
                                 </children>
                              </GridPane>
                              <ButtonBar prefHeight="40.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                                 <buttons>
                                    <Button mnemonicParsing="false" onAction="#remove" text="REMOVE" />
                                 </buttons>
                              </ButtonBar>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
               </content>
               <padding>
                  <Insets bottom="50.0" />
               </padding>
            </ScrollPane>
         </children>
      </VBox>
   </children>
